@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"
@addTagHelper *, AuthoringTagHelpers
@model Test_AdminPanel.Models.Map_UserRole
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/DataTable/DataTables-1.11.3/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">


            </div>
        </div>
    </div>

    <div class="card-body">
        <div style="position: relative; height: auto; width: 100%;">
            <div class="jsgrid-grid-header jsgrid-header-scrollbar">

                <h1 style="text-align:center;">Düzəliş et</h1>
                <form asp-controller="Role" asp-action="Edit" method="post">
                    <table id="example" class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>UserRoleID</th>
                                <th>UserID</th>
                                <th>RoleId</th>
                                <th>RoleName</th>
                                <th>IsActive</th>
                                <th>CreateDate</th>
                                <th>Save</th>

                            </tr>
                        </thead>
                        <tbody>

                            <tr>

                                <td>
                                    <input asp-for="UserRoleID" class="form-control" type="number" placeholder="UserID" />
                                    <span asp-validation-for="UserRoleID" style="color:red;" class="input-group-text"></span>
                                </td>

                                <td>
                                    <input asp-for="UserID" class="form-control" type="number" placeholder="UserID" />
                                    <span asp-validation-for="UserID" style="color:red;" class="input-group-text"></span>
                                </td>

                                <td>
                                    <input asp-for="RoleID" class="form-control" type="number" placeholder="RoleID" />
                                    <span asp-validation-for="RoleID" style="color:red;" style="color:red" class="input-group-text"></span>
                                </td>

                                <td>
                                    <input asp-for="RoleName" class="form-control" type="text" placeholder="RoleName" />
                                    <span asp-validation-for="RoleName" style="color:red;" class="input-group-text"></span>

                                </td>


                                <td>
                                    <input asp-for="IsActive" class="form-control" type="checkbox" placeholder="IsActive" />
                                    <span asp-validation-for="IsActive" style="color:red;" class="input-group-text"></span>

                                </td>
                                <td>
                                    <input asp-for="CreateDate" class="form-control" type="date" placeholder="IsActive" />
                                    <span asp-validation-for="CreateDate" style="color:red;" class="input-group-text"></span>

                                </td>

                                <td>
                                    <button class="btn btn-outline-success" type="submit">Save</button>
                                </td>



</tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>

</div>

